@model WillemseFranceMP.Models.Offre
@{
    ViewBag.Title = "Details Offres";
}

<div class="container">
    <br /><br />
    <h2 style="color:darkgreen;">@ViewBag.Title</h2>
    <br />
    <div>
        @{
            if (ViewBag.ExisteOffre)
            {

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-3">
                            <label class="control-label" style="color:darkgreen;">Produit :</label>
                            @Html.DisplayFor(m => m.Produit.CodProFou)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-4">
                            <label class="control-label" style="color:darkgreen;">Prix de Cession HT :</label>
                            @Html.DisplayFor(m => m.PrixAchtHT) &euro;
                        </div>
                        <div class="col-xs-4">
                            <label class="control-label" style="color:darkgreen;">Prix de vente TTC :</label>
                            @Html.DisplayFor(m => m.PrixVtTtc) &euro;
                        </div>
                        <div class="col-xs-4">
                            <label class="control-label" style="color:darkgreen;">Frais de Livraison :</label>
                            @Html.DisplayFor(m => m.FraisLiv) &euro;
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <label class="control-label" style="color:darkgreen;">TVA :</label>
                            @Html.DisplayFor(m => m.Tva)
                        </div>

                        <div class="col-xs-4">
                            <label class="control-label" style="color:darkgreen;">Délai de livraison :</label>
                            @Html.DisplayFor(m => m.Delailiv)
                        </div>
                        <div class="col-xs-4">
                            <label class="control-label" style="color:darkgreen;">Disponibilité :</label>
                            @Html.DisplayFor(m => m.Dispo)
                        </div>
                    </div>
                    <br />
                </div>
                <p>
                    <a><span class="glyphicon glyphicon-arrow-left"></span></a>
                    @Html.ActionLink("Retour", "ValidPro", "Admin", new { recherche = Model.Produit.IdFou }, null) &nbsp;&nbsp;&nbsp;&nbsp;  |&nbsp;&nbsp;
                    <a href="@Url.Action("ValidOffAdmin",new { id = Model.ProduitID })" class="btn btn-success active" role="button"><b style="font-family:Arial, Helvetica, sans-serif">Valider </b></a>
                </p>

            }
            else
            {
                <div class="alert alert-danger">
                    <p>Le fournisseur n'a pas renseigné d'offres sur ce produit</p>
                </div>
                <a><span class="glyphicon glyphicon-arrow-left"></span></a>
                @Html.ActionLink("Retour", "ValidPro", "Admin", new { recherche = ViewBag.idFou }, null)
            }
        }
        </div>
    </div>

@section Scripts {
    <script type="text/javascript">
        $("#pageProduits").addClass('active');
    </script>
}
