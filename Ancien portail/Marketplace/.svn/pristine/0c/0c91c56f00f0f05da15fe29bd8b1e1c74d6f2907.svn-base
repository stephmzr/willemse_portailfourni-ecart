@{
    ViewBag.Title = "Bienvenue au Portail Fournisseur ";
}


<br />
<div class="text-center">
        <a style="color:darkgreen;font-size:xx-large">@ViewBag.Title</a><br /><br />
        <a class="btn btn-default btn-file" href="@Url.Action("DownloadOffExcel",new { id = "Off" })">
            <span class="glyphicon glyphicon-download" role="button"></span>
            Téléchargez le guide d'utilisation
        </a>
</div>
<br />
<hr />

<div class="container">
    <div class="bs-example" style="	margin: 20px;">
        <div id="myCarousel" class="carousel slide" data-interval="3000" data-ride="carousel" style="background: #2f4357;">
            <!-- Carousel indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>

            </ol>
            <!-- Wrapper for carousel items -->
            <div class="carousel-inner" style="width:100%;height:80%;">
                <div class="active item">
                    <img src="~/ImagesSite/icon-plante.png" alt="Willemse France" style="width: 41%;margin: 0 auto;">
                    <div class="carousel-caption">
                        <h2>Le Portail Fournisseur - Willemse France</h2>
                        <p>Créer votre compte Fournisseur </p>
                    </div>
                </div>
                <div class="item">
                    <img src="~/ImagesSite/icon_download.png" alt="Portail fournisseur" style="width: 41%;margin: 0 auto;">
                    <div class="carousel-caption">
                        <h2>Gérer votre Catalogue en Ligne</h2>
                        <p>Publiez rapidement vos produits</p>
                    </div>
                </div>
            </div>
            <!-- Carousel controls -->
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
        </div>
        <br /><br />
    </div>
</div>
